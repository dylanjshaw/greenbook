<header>
  <h1>Swag Overflow</h1>
  <p>
  <% if user_logged_in? %>
      <a class='top_links' href="/questions/new">| new |</a>
      <a class='top_links' href="#">Username |</a>
      <a class='top_links' href="#">Home |</a>
  <% else %>
      <a class='top_links' href="#">Register |</a>
      <a class='top_links' href="/questions/login">Login |</a>
      <a class='top_links' href="#">Home |</a>
  <% end %>
  </p>
</header>


<div class='question-container'>
  <% @questions.each do |question| %>

    <article id="<%= question.id %>">
      <form method="question" action='/questions/<%= question.id %>/vote' class="inline">
        <button type="submit" name="submit_param" value="submit_value" class="fa fa-sort-desc vote-button upvote-button"></button>
      </form>
      <h2><a href='/questions/<%= question.id %>'><%= question.title %></a></h2>
      <h3 id='subtitle'><%= question.content %></h3>
      <p>


        <a class="delete" href='/questions/<%= question.id %>'></a>
      </p>
    </article>

  <% end %>
</div>

<form id="questions" method="question" action="/questions">
  <input type="text" name="title" placeholder="title">
  <input type="submit" value="submit new question">
</form>
